  cloudflare-ddns:
    image: oznu/cloudflare-ddns:latest
    container_name: cloudflare-ddns
    restart: always
    environment:
      - API_KEY=xxxxxxxx
      # - API_KEY_FILE=/path/to/secretfile # takes precedence over API_KEY
      - ZONE=example.com
      # - SUBDOMAIN=subdomain # optional, use root ZONE if blank
      - PROXIED=true # default is false
      # DELETE_ON_STOP=false # optional, delete DNS record when stopped
      # - DNS_SERVER=1.1.1.1 # optional
      - CRON=*/5 * * * * # default = every 5 minutes
      - PUID=$DOCK_UID
      - PGID=$DOCK_GID
